<mvc:View displayBlock="true"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m" controllerName="opensap.myapp.controller.App"
	xmlns:mvc="sap.ui.core.mvc">
	<App>
		<pages>
			<Page title="openSAP - Developing with SAPUI5">
				<content>
					<IconTabBar id="idTopLevelIconTabBar" class="sapUiResponsiveContentPadding" selectedKey="db">
						<items>
							<IconTabFilter id="start" text="{i18n>gettingStartedFilter}" key="db">
								<Carousel>
									<pages>
										<Image src="https://thumbs.dreamstime.com/b/blauer-schmetterling-mit-sonne-im-weltraum-elemente-dieses-bildes-von-nasa-foto-hoher-qualit%C3%A4t-211939014.jpg" height="600px"/>
										<Image src="https://images.unsplash.com/photo-1612021470627-ca1cb2d2ee92?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8YmlsZGVyfGVufDB8fDB8fA%3D%3D&amp;ixlib=rb-1.2.1&amp;w=1000&amp;Mq=80" height="600px"/>
									</pages>
								</Carousel>
								<Button text="{i18n>showHelloButtonText}" press="onShowHello"/>
								<Input value="{
									path: 'helloPanel>/recipient/name',
									type: 'sap.ui.model.type.Float',
									constraints: {maximum : 3000}
								}" description="Hello {helloPanel>/recipient/name}" valueLiveUpdate="false" width="60%"/>
							</IconTabFilter>
							<IconTabFilter id="layouts" text="{i18n>layoutFilter}">
								<MessageStrip type="Information" showIcon="true" text="Here's a Form Layout inside an Icon Tab Bar â€¦"/>
								<f:SimpleForm id="simpleFormChange" title="Address" editable="true" class="editableForm sapUiSmallMarginTopBottom">
									<f:content>
										<Label text="{i18n>layoutFormName}"/>
										<Input value="{address>/Name}"/>
										<Label text="{i18n>layoutFormStreet}"/>
										<Input value="{address>/Street}"/>
										<Label text="{i18n>layoutFormHouseNumber}"/>
										<Input value="{address>/HouseNumber}"/>
										<Label text="{i18n>layoutFormZIPCode}"/>
										<Input value="{address>/ZIPCode}"/>
										<Label text="{i18n>layoutFormCity}"/>
										<Input value="{address>/City}" />
										<Label text="{i18n>layoutFormCountry}"/>
										<Select>
											<items>
												<core:Item text="{i18n>layoutCountryGermany}"/>
												<core:Item text="{i18n>layoutCountryUSA}"/>
												<core:Item text="{i18n>layoutCountryEngland}"/>
											</items>
										</Select>
									</f:content>
								</f:SimpleForm>
								<Toolbar>
									<ToolbarSpacer/>
									<Button text="{i18n>layoutPublishButton}" icon="sap-icon://outbox" type="Accept" press="onShow"/>
									<Button text="{i18n>layoutDraftButton}" icon="sap-icon://save" press="onSave"/>
								</Toolbar>
								<!-- <Panel id="userInfoPanel" headerText="{i18n>userInfo}" visible="false">
									<l:Grid>
										<Text text="{i18n>layoutFormName} : {address>/Name}"/>
										<Text text="{i18n>layoutFormStreet} : {address>/Street}"/>
										<Text text="{i18n>layoutFormHouseNumber} : {address>/HouseNumber}"/>
										<Text text="{i18n>layoutFormZIPCode} : {address>/ZIPCode}"/>
										<Text text="{i18n>layoutFormCity} : {address>/City}"/>
										<Text text="{i18n>layoutFormCountry} : {address>/Country}"/>
									</l:Grid>
								</Panel> -->
								<core:Fragment fragmentName="opensap.myapp.view.UserInfo" type="XML"/>
							</IconTabFilter>
							<IconTabFilter text="{i18n>dataBindingFilter}">
								<content>
									<List id="productsList" items="{
										path : '/ProductSet',
										parameters : {
											expand: 'ToSupplier'
										},
										sorter : {
											path : 'Category',
											group : true
										}
									}" growing="true" growingThreshold="5" growingScrollToLoad="false">
										<headerToolbar>
											<Toolbar>
												<Title text="{i18n>productListTitle}"/>
												<ToolbarSpacer/>
												<SearchField width="20%" search="onFilterProducts"/>
											</Toolbar>
										</headerToolbar>
										<items>
											<ObjectListItem title="{Name}" number="{
												parts: [
												{path: 'Price'},
												{path: 'CurrencyCode'}
												],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {
													showMeasure: false
												}
											}" numberUnit="{CurrencyCode}" numberState="{= ${Price} > 500 ? 'Error' : 'Success'}" intro="{ProductID}" press="onItemSelected" type="Active">
												<firstStatus>
													<ObjectStatus text="{
														parts: [
															{path: 'WeightUnit'},
															{path: 'WeightMeasure'}
														],
														formatter : '.formatter.delivery'
													}"/>
												</firstStatus>
												<secondStatus>
													<ObjectStatus title="{i18n>statusDeliveryForm}" text="{ToSupplier/Address/City}"/>
												</secondStatus>
											</ObjectListItem>
										</items>
									</List>
									<!-- <Panel id="productDetailsPanel" headerText="{i18n>productDetailPanelHeader}" visible="false">
										<l:Grid>
											<Text text="{i18n>productDetailPanelID}: {ProductID}"/>
											<Text text="{i18n>productDetailPanelName}: {Name}"/>
											<Text text="{i18n>productDetailPanelDescription}:\n {Description}"/>
											<Text text="{i18n>productDetailPanelPrice}: {Price}"/>
										</l:Grid>
									</Panel> -->
									<core:Fragment fragmentName="opensap.myapp.view.ProductDetails" type="XML"/>
								</content>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<ResponsivePopover title="{i18n>userInfo}" id="userInfoPopover" class="sapUIPopupWidthPadding">
            <content>
                <l:Grid>
                    <l:content>
                        <Text text="{i18n>layoutFormName}: {address>/Name}"/>
                        <Text text="{i18n>layoutFormStreet}: {address>/Street}"/>
                        <Text text="{i18n>layoutFormHouseNumber}: {address>/HouseNumber}"/>
                        <Text text="{i18n>layoutFormZIPCode}: {address>/ZIPCode}"/>
                        <Text text="{i18n>layoutFormCity}: {address>/City}"/>
                        <Text text="{i18n>layoutFormCountry}: {address>/Country}"/>
                    </l:content>
                </l:Grid>
            </content>
        </ResponsivePopover>
			</Page>
		</pages>
	</App>
</mvc:View>
